{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@public/*": ["public/*"],
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["public/styles/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "target": "es2019",
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
